                "uci": [
                    "get"
                ]
            },
            "uci": [
                "chirpstack-concentratord",
                "chirpstack-concentratord-slot1",
                "chirpstack-concentratord-slot2",
                "chirpstack-mqtt-forwarder",
                "chirpstack-mqtt-forwarder-slot1",
