FROM jenkins/jenkins:lts

USER root

# Install build dependencies for OpenWrt/ChirpStack Gateway OS
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    binutils \
    patch \
    libacl1-dev \
    libattr1-dev \
    gettext \
    zlib1g-dev \
    gawk \
    bzip2 \
    flex \
    bison \
    make \
    autoconf \
    gettext \
    texinfo \
    unzip \
    sharutils \
    subversion \
    ncurses-dev \
    zlib1g-dev \
    gawk \
    git \
    ccache \
    rsync \
    curl \
    wget \
    python3 \
    python3-dev \
    python3-setuptools \
    libncurses5-dev \
    libssl-dev \
    libelf-dev \
    file \
    quilt \
    xsltproc \
    libxml-parser-perl \
    && rm -rf /var/lib/apt/lists/*

# Verify installations
RUN gcc --version && \
    g++ --version && \
    python3 --version && \
    gawk --version && \
    quilt --version && \
    rsync --version

USER jenkins

